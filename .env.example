# Kraken API Configuration
# Get your API keys from: https://www.kraken.com/u/security/api
VITE_KRAKEN_API_KEY=your_kraken_api_key_here
VITE_KRAKEN_API_SECRET=your_kraken_api_secret_here

# Trading Configuration
VITE_ENABLE_LIVE_TRADING=false
VITE_DEFAULT_POSITION_SIZE=10
VITE_MAX_LEVERAGE=1
VITE_TRADING_FREQUENCY=5

# Bold Features (HIGH RISK)
VITE_ENABLE_BOLD_MODE=false
VITE_ENABLE_MARTINGALE=false
VITE_ENABLE_HIGH_VOL_MODE=false

# Risk Management
VITE_MAX_DAILY_LOSS=5
VITE_MAX_DRAWDOWN=20
VITE_EMERGENCY_STOP=true

# Monitoring & Alerts
VITE_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
VITE_EMAIL_API_KEY=your_email_service_api_key
VITE_SMS_API_KEY=your_sms_service_api_key

# Database (for production deployment)
DATABASE_URL=postgresql://username:password@host:port/database
REDIS_URL=redis://localhost:6379

# Development
NODE_ENV=development
VITE_API_BASE_URL=https://api.kraken.com